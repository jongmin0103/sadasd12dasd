import java.util.*;

public class Main
{
    public static void main(String[] args)
    {
        // 입력하기
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int a, b;
        // sc.close();
        
        // 출력하기
        for(int i = 0; i < n; i++)
        {
            a = sc.nextInt();
            b = sc.nextInt();
            
            System.out.println(a + b);
        }
        
        sc.close();
            
        
    }    
}
