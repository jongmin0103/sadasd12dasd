import java.util.*;

public class Main
{
    public static void main(String[] args)
    {
        // 입력하기
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int sum = 0;
        sc.close();
        
        // 출력하기
        for(int i = 1; i <= n; i++)
        {
            sum += i;
        }
        
        System.out.println(sum);
    }    
}
